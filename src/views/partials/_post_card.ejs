<article class="bg-white rounded-lg shadow-md border border-gray-200 hover:shadow-lg transition-all duration-300 relative overflow-hidden">
    <!-- Patriotic Background Pattern -->
    <svg class="absolute inset-0 w-full h-full opacity-[0.03]" viewBox="0 0 100 100" preserveAspectRatio="xMidYMid slice">
        <!-- Stars -->
        <g fill="#1B4B9B">
            <circle cx="20" cy="20" r="1" />
            <circle cx="40" cy="15" r="1" />
            <circle cx="60" cy="20" r="1" />
            <circle cx="80" cy="15" r="1" />
            <circle cx="30" cy="40" r="1" />
            <circle cx="50" cy="35" r="1" />
            <circle cx="70" cy="40" r="1" />
            <circle cx="90" cy="35" r="1" />
        </g>
        
        <!-- Wavy Stripes -->
        <g stroke="#E31837" strokeWidth="0.5" fill="none">
            <path d="M0,25 Q25,20 50,25 T100,25" />
            <path d="M0,45 Q25,40 50,45 T100,45" />
            <path d="M0,65 Q25,60 50,65 T100,65" />
            <path d="M0,85 Q25,80 50,85 T100,85" />
        </g>
    </svg>

    <!-- Subtle flag corner -->
    <div class="absolute top-0 right-0 w-16 h-16 overflow-hidden">
        <div class="absolute top-0 right-0 w-4 h-full bg-primary-500 transform rotate-45 translate-x-8 -translate-y-2"></div>
    </div>
    
    <!-- Card Content -->
    <div class="relative z-10 p-6">
        <blockquote class="text-lg relative text-gray-800">
            <span class="absolute -left-4 -top-2 text-4xl text-primary-500/20">"</span>
            <span class="block pl-4"><%= post.reason %></span>
        </blockquote>
        <footer class="flex justify-between items-center mt-6 pt-4 border-t border-gray-100 text-sm">
            <div class="text-gray-600 flex items-center">
                <svg class="w-4 h-4 text-primary-500 mr-2" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z"/>
                </svg>
                <% if (post.town && post.state) { %>
                    <span>from <%= post.town %>, <%= post.state %></span>
                <% } else if (post.state) { %>
                    <span>from <%= post.state %></span>
                <% } else { %>
                    <span class="italic">Anonymous</span>
                <% } %>
            </div>
            <div class="text-gray-500 flex items-center">
                <svg class="w-4 h-4 mr-2 text-primary-500/70" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10 10-4.5 10-10S17.5 2 12 2zm0 18c-4.41 0-8-3.59-8-8s3.59-8 8-8 8 3.59 8 8-3.59 8-8 8zm.5-13H11v6l5.2 3.2.8-1.3-4.5-2.7V7z"/>
                </svg>
                <%= new Date(post.created_at).toLocaleDateString('en-US', { 
                    year: 'numeric', 
                    month: 'short', 
                    day: 'numeric' 
                }) %>
            </div>
        </footer>
    </div>
</article>