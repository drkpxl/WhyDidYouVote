{
  "name": "why-did-you-vote",
  "version": "1.0.0",
  "description": "A simple web application to collect and display reasons for voting.",
  "main": "src/app.js",
  "type": "module",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "build": "npm run build:css",
    "build:css": "tailwindcss -i ./src/public/css/style.css -o ./src/public/css/output.css --minify",
    "watch:css": "tailwindcss -i ./src/public/css/style.css -o ./src/public/css/output.css --watch",
    "docker:dev": "npm run build:css && concurrently \"npm run watch:css\" \"nodemon --watch src --ext js,ejs src/app.js\"",
    "init:db": "node src/scripts/init-db.js"
  },
  "keywords": [],
  "author": "Steven Hubert",
  "license": "ISC",
  "dependencies": {
    "better-sqlite3": "^8.1.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "ejs": "^3.1.9",
    "express": "^4.18.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^8.2.0",
    "nodemon": "^2.0.22",
    "postcss": "^8.4.23",
    "tailwindcss": "^3.3.2"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
